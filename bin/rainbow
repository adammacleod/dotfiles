#!/usr/bin/python
from __future__ import print_function
import sys, atexit
from datetime import datetime

COLOURS = [
    #'\033[30m', # Black
    '\033[31m', # Red
    '\033[32m', # Green
    '\033[33m', # Yellow
    '\033[34m', # Blue
    '\033[35m', # Magenta
    '\033[36m', # Cyan
    #'\033[37m', # White
    ]
RESET_COLOUR = '\033[0m'
TIMEOUT = 3

then = datetime.now()

def printer():
    global then
    change_colour()
    while 1:
        line = sys.stdin.readline()

        if not line:
            break

        now = datetime.now()
        delta = now-then
        then = now

        if delta.total_seconds() > TIMEOUT:
            change_colour()
        print(line, end='')

def change_colour():
    colour = COLOURS.pop(0)
    COLOURS.append(colour)
    print(colour, sep='', end='')

def cleanup():
    print(RESET_COLOUR, end='', sep='')

try:
    atexit.register(cleanup)
    printer()
except KeyboardInterrupt:
    pass

